<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    @using System.Web;
    @{String url = null; }
</head>
<body>    
    <div class="saloon-topbar navbar-fixed-top">
        <h3 style="padding-left:30px;" class="pull-left">@Html.ActionLink("Saloon Application", "Index", "Home", new { area = "" }, null)</h3>
        <div class="pull-right nav-pos-middle">
            @{
                var name = "";
                var context = HttpContext.Current;
                if (context.Session["Name"] != null)
                {
                    name = context.Session["Name"].ToString();
                    url = String.IsNullOrEmpty(name) ? "" : Html.ActionLink(String.Format("{0} (Logout) ", name), "Logout", "Home", new { area = "" }, null).ToString();
                }
            }

            @Html.Raw(url)
        </div>

    </div>
    
    <!-- Wrap all page content here -->
    <div id="wrap">
        <div class="container body-content">
            @RenderBody() 
        </div>
     </div>

    <div id="footer">
        <div class="container">
            <div class="row">
                <div class="col-lg-2">
                    <p style="padding-top:25px; color:#FFFFFF">&copy; @DateTime.Now.Year - Innovys Ltd</p>
                </div>
                <div class="col-lg-8">
                </div>
                <div class="col-lg-2">
                    <img src="~/Images/logo.png" />
                </div>
            </div>
        </div>
    </div> 
</body>
</html>
